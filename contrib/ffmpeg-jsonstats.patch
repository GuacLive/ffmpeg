+            st->codecpar->profile, st->codecpar->level);
+
+        av_free(url);
+
+        if(st->codecpar->codec_type == AVMEDIA_TYPE_VIDEO) {
+            float fps = 0;
+            if(st->avg_frame_rate.den && st->avg_frame_rate.num) {
+                fps = av_q2d(st->avg_frame_rate);
+            }
