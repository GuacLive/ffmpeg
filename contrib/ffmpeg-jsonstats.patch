+                    ? "none"
+                    : av_get_pix_fmt_name(st->codecpar->format),
+                st->codecpar->width,
+                st->codecpar->height);
+        } else if(enc->codec_type == AVMEDIA_TYPE_AUDIO) {
+            char layout[128];
